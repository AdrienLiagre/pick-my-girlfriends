
<div class="banner">
  <div class="banner-shadow"></div>
  <div class="content text-center" data-sr='enter top'>
    <h1> Pick your basket </h1>
    <h3> Welcome to our local community of farmers </h3>

    <div class="form-group text-center">
      <div class="container">
        <div class="row">
          <div class="col-sm-4 col-sm-offset-4">
            <%= form_tag("/girlfriends", method: "get") do %>
              <%= text_field_tag :city, nil, class: "form-control", name: "user_input_city", id: "user_input_city", placeholder: 'Where do you want company?' %>
              <%= submit_tag "Search", class: 'btn navbar-wagon-button' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container" >
  <div class="col-md-6">
    <h2>Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="teaser col-md-6">
    <div class="container">
      <% top_3_girlfriends.each do |girlfriend| %>
        <br>
        <div class="row">
          <div class="col-sm-offset-2">
            <ul class="list-inline avatars">
              <div class="card-teaser" >
                <li>
                  <h3> <%= image_tag girlfriend.picture, class: "img-circle avatar" %>
                  <%= girlfriend.name %> </h3>
                </li>
              </div>
            </ul>
          </div>
        </div>
      <%end %>
    </div>
  </div>
</div>

<br>

