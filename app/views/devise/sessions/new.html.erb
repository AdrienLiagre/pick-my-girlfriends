
<div class="banner">
  <div class="banner-shadow"></div>
  <div class="content text-center" data-sr='enter top'>
    <h1> Pick your girl </h1>
    <h3> Welcome to our cheaters community </h3>

    <div class="form-group text-center">
        <div class="container">
          <%= form_tag("/girlfriends", method: "get") do %>
            <%= text_field_tag :city, nil, class: "form-control", name: "user_input_city", id: "user_input_city", placeholder: 'Where do you want company?' %>
            <%= submit_tag "Search", class: 'btn navbar-wagon-button' %>
          <% end %>
        </div>
      </div>
  </div>
</div>

<div class="container" >
  <div class="col-md-6">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|   %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="teaser col-md-6">
    <% top_3_girlfriends.each do |girlfriend| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" >
          <span class="card-bg"></span>
          <span class="card-shadow"></span>
          <span class="card-text">
            <h2><%= girlfriend.name %></h2>
            <p><%= girlfriend.city %></p>
          </span>
        </div>
      </div>
    <%end %>
  </div>

</div>
