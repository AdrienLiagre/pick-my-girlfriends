<div class="container">
  <div class="row">
    <div class="text-center">
      <div class="col-md-6">
        <h1> Welcome <%= current_user.email %></h1>
        <%= image_tag current_user.picture %>
      </div>
      <br>
      <br>
      <div class="col-md-6">
        <br>
        <p><%= link_to "Your girls", account_girlfriends_path, class: "navbar-wagon-button btn" %></p>
        <br>
        <p><%= link_to "Add a girl", new_account_girlfriend_path, class: "navbar-wagon-button btn" %></p>
        <br>
        <p><%= link_to "List all the girls", girlfriends_path, class: "navbar-wagon-button btn" %></p>

      </div>
    </div>
  </div>
</div>

<hr>

<div class="container text-center">
  <div class="row">
    <ul style="list-style: none;">
     <li><h1>My next appointments</h1></li>
    </ul>
      <div class="container">
        <% @appointments.each do |appointment| %>
          <div class="col-md-6 col-lg-4">
            <% if appointment.appointment_on > Time.now %>
              <ul style="list-style: none;">
                <li><%= appointment.appointment_on %></li>
                <li> With <%= appointment.girlfriend.name %> </li>
                <li><p> <%= link_to 'Check her profile again !', girlfriend_path(appointment.girlfriend) %></li>
                <%= link_to "Delete this appointment", account_appointment_path(appointment), method: :delete, class: "navbar-wagon-button btn"  %>
              </ul>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</div>
